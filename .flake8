[flake8]
# Black compatibility
max-line-length = 120
extend-ignore = E203, W503, E501

# Exclude patterns
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    build,
    dist,
    *.egg-info,
    .pytest_cache,
    .coverage,
    htmlcov,
    .mypy_cache,
    .tox

# Complexity
max-complexity = 10

# Docstrings
docstring-convention = google

# Per-file ignores
per-file-ignores =
    __init__.py:F401
    tests/*:S101,S106
    dashboard/backend/app/services/scan.py:C901
    dashboard/backend/run_scans.py:C901
    scripts/scanning/run_atomic_red_team_suite.py:C901

# Error codes to check
select = C,E,F,W,B,B9

# Show source code for errors
show-source = True
statistics = True
