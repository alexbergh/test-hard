{
  "options": {
    "config_plugin": "filesystem",
    "logger_plugin": "filesystem",
    "logger_path": "/var/log/osquery",
    "disable_logging": "false",
    "log_result_events": "true",
    "schedule_splay_percent": "10",
    "utc": "true",
    "pidfile": "/var/osquery/osquery.pid",
    "worker_threads": 4
  },
  "schedule": {
    "system_info": {
      "query": "SELECT hostname, cpu_brand, physical_memory, hardware_vendor, hardware_model, uuid FROM system_info;",
      "interval": 86400,
      "description": "Базовая инвентаризационная информация о системе (раз в сутки)."
    },
    "os_version": {
      "query": "SELECT name, version, platform, major, patch FROM os_version;",
      "interval": 86400,
      "description": "Информация о версии ОС (раз в сутки)."
    }
  },
  "packs": {
{% for pack in osquery_packs %}
    "{{ pack }}": "/etc/osquery/packs/{{ pack }}.conf"{% if not loop.last %},{% endif %}
{% endfor %}
  },
  "decorators": {
    "load": [
      "SELECT username FROM logged_in_users WHERE type = 'tty' ORDER BY time DESC LIMIT 1;"
    ]
  },
  "flags": [
    "--tls_hostname={{ osquery_tls_hostname }}"{% for flag in osquery_additional_flags %},
    "{{ flag }}"{% endfor %}
  ]
}
