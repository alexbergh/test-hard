# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files to always have LF line endings
*.sh text eol=lf
*.py text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.json text eol=lf
*.md text eol=lf

# Denote shell scripts as executable
*.sh binary
scripts/**/*.sh binary
scanners/**/entrypoint.sh binary
scanners/**/entrypoint.py binary
scanners/**/entrypoint-new.sh binary
