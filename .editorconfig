# EditorConfig helps maintain consistent coding styles
# https://editorconfig.org

root = true

# All files
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 120

# Shell scripts
[*.sh]
indent_style = space
indent_size = 4

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Makefile
[Makefile]
indent_style = tab
indent_size = 4

# Docker files
[Dockerfile*]
indent_style = space
indent_size = 4

# Configuration files
[*.{conf,config,ini,cfg}]
indent_style = space
indent_size = 2

# JavaScript/TypeScript (if needed)
[*.{js,ts,jsx,tsx}]
indent_style = space
indent_size = 2
